.row
  = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'col-xs-6 offset-xs-3' }) do |f|
    %h3 Установите новый пароль
    = devise_error_messages!
    = f.hidden_field :reset_password_token
    .form-group
      = f.label :password, 'Новый пароль'
      = f.password_field :password, autofocus: true, autocomplete: 'off', class: 'form-control'
      = f.label :password_confirmation, 'Подтвердите новый пароль'
      = f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control'
    = f.submit 'Изменить мой пароль', :class => 'btn btn-success'
